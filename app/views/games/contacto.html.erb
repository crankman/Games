<div class="main">
	<div class="container">
		<div class="row">
			<div class="box-wrapper span12">
				<div class="row">
					<!-- Comienzo de Sinopsis -->
					<div class="box-content-widget span12">						
						<div class="row">
							<div class="title bg-title span12">
								<h3 class="pull-hover">Contacto:</h3>
							</div>
						</div>

						<div class="widget">
							<div class="widget-content-pd">
								<div class="span12">
									<form>
										<label for="nombre">Nombre:</label>
										<div class="input-prepend input-append">
										  	<span class="add-on"><i class="fa fa-user"></i></span>
									 		<input id="nombre" type="text" name="nombre" placeholder="Nombre y Apellido" required="" />
									 	</div>

									 	<label for="direc">Dirección:</label>
									 	<div class="input-prepend input-append">
									 		<span class="add-on"><i class="fa fa-home"></i></span>
									 		<input id="direc" type="text" name="direc" placeholder="Ingresá tu Dirección" required="" />									 		
									 	</div>

									 	<label for="email">Email:</label>
									 	<div class="input-prepend input-append">
									 		<span class="add-on"><i class="fa fa-envelope"></i></span>
									 		<input id="email" type="email" name="email" placeholder="ejemplo@correo.com" required="" />
									 	</div>

									 	<label for="tel">Teléfono / Cel:</label>
									 	<div class="input-prepend input-append">
									 		<span class="add-on"><i class="fa fa-mobile phone"></i></span>
									 		<input id="tel" type="tel" name="tel" placeholder="(0381)111-111-111" required="" />
									 	</div>

									 	<label for="mensaje">Pedido de Juegos PC:</label>
									 	<textarea id="mensaje" name="mensaje" placeholder="Ingresá aquí tu pedido..." required=""></textarea><br>
									 	<input class="btn" id="submit" type="submit" name="submit" value="Enviar" />
									</form>
								</div>	
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>