<div class="main">
  <div class="container">

    <%= render "shared/buscador" %>

    <%= render "shared/slider" %>

    <div class="row">
      <!-- **************** start Recomendados ****************** -->
      <div class="box-wrapper span12">
        <div class="row">
          <div class="title span12">
            <a name="recomendados">
              <h3 class="pull-left">Juegos Recomendados</h3>
            </a>
          </div>
        </div>

        <ul class="thumbnails thumbnails-vertical">
          <% @recomended.each do |game| %>
          <li class="span6">
            <div class="thumbnail border-radius-top">
              <div class="bg-thumbnail-img">
                <%= image_tag(game.portada.url, class:'border-radius-top', style:"opacity: 1;") %>
              </div>
              <div class="thumbnail-content-left">
                <h5><%= link_to game.title, game %></h5>
                <p>
                  Lorem ipsum dolor sit amet, consectetur adipisicing elit magna aliqua.
                </p>
              </div>
            </div>
            <div class="box border-radius-bottom">
              <p>
                <span class="title_torrent pull-left"><i class="fa fa-thumbs-up"></i>
                  <div class="fb-like" data-href="<%= game.url %>" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div></span>
                <span class="number-view pull-right"><i class="fa fa-eye"></i><%= game.visit.to_i %></span>
              </p>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
      <!-- **************** end Recomendados ****************** -->

      <!-- **************** start Más Visitados ****************** -->
      <div class="box-wrapper  span12">
        <div class="row">
          <div class="title span12">
            <a name="+visitados">
              <h3 class="pull-left">Juegos Más Visitados</h3>
            </a>
          </div>
        </div>

        <ul class="thumbnails thumbnails-horizontal">
          <% @most_visited.each do |game| %>
          <li class="span3">
            <div class="thumbnail border-radius-top">
              <div class="bg-thumbnail-img">
                <%= image_tag(game.portada.url, class:"border-radius-top", style:"opacity: 1;") %>
              </div>
              <h5 class="centro"><%= link_to game.title, game %></h5>
            </div>

            <div class="box border-radius-bottom">
              <div class="centro">
                <!-- Button Like -->
                  <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
                <!-- End Button -->
              </div>
            </div>
          </li>
          <% end %>
        </ul>

        <div class="row">
          <div class="span12">
            <div class="navigation pagination pull-right">
              <ul>
                <li><a href="#">←</a></li>
                <li><a class="active" href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">→</a></li>
              </ul>
            </div>
          </div><!-- end navigation -->
        </div>
      </div><!-- **************** end Más Visitados ****************** -->
    </div><!-- row -->
  </div><!-- end container -->
</div><!-- end main -->